{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["resources/js/*"]
    }
  },
  "include": [
    "vite.config.*",
    "resources/js/shims/env.d.ts",
    "resources/js/shims/components.d.ts",
    "resources/js/shims/auto-imports.d.ts",
    "resources/js/**/*.ts",
    "resources/js/**/*.vue"
  ]
}
